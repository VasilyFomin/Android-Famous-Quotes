<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">		
       	    
    <CheckBoxPreference
			android:key = "night_mode"
			android:title = "@string/night_mode_title"
			android:summary = "@string/night_mode_summary"
			android:defaultValue = "false" /> 		
	<CheckBoxPreference
			android:key = "silent_mode"
			android:title = "@string/silent_mode_title"
			android:summary = "@string/silent_mode_summary"
			android:defaultValue = "false" /> 		
	<ListPreference
        	android:key = "language_settings"
            android:title = "@string/language_list_title"
            android:summary = "@string/laguage_list_summary"
            android:entries = "@array/language_list_entries"
            android:entryValues = "@array/language_list_entries_values"
            android:dialogTitle = "@string/language_list_dialog_title" 
       	    android:checkableBehavior = "single" />
</PreferenceScreen>
